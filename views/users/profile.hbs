<div class="col d-flex mt-5 bg-white border">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}"
      style="width: 250px;transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8 my-3">
    <h2>{{user.name}}</h2>
    <p>{{user.email}}</p>
    <p>評論次數：{{count}}</p>
    {{#ifCond currentUser user.id}}
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">編輯</a>
    {{/ifCond}}
  </div>
</div>

<div class="col d-flex mt-3">

  <div class="col-4">
    <div class="card">
      <h5 class="card-header">{{followingsCount}} followings(追蹤者)</h5>
      <div class="card-body d-flex flex-wrap">
        {{#each followings}}
        <a href="/users/{{this.id}}">
          <div class="m-1" style="width: 100px;height:100px"><img src="{{this.image}}" alt=""
              style="max-height:100%;max-width:100%;display:block;width:auto;height:auto;">
          </div>
        </a>
        {{/each}}
      </div>
    </div>

    <div class="card mt-3">
      <h5 class="card-header">{{followersCount}} followers(追隨者)</h5>
      <div class="card-body d-flex flex-wrap">
        {{#each followers}}
        <a href="/users/{{this.id}}">
          <div class="m-1" style="width: 100px;height:100px"><img src="{{this.image}}" alt=""
              style="max-height:100%;max-width:100%;display:block;width:auto;height:auto;">
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-8 d-flex flex-column align-items-end">
    <div class="card col-11">
      <h5 class="card-header">{{restCount}} 已評論餐廳</h5>
      <div class="card-body d-flex flex-wrap">
        {{#each comments}}
        <a href="/restaurants/{{this.restaurantId}}">
          <div class="m-1" style="width: 100px;height:100px"><img src="{{this.restaurantImage}}" alt=""
              style="max-height:100%;max-width:100%;display:block;width:auto;height:auto;">
          </div>
        </a>
        {{/each}}
      </div>
    </div>

    <div class="card col-11 mt-3">
      <h5 class="card-header">{{favoritedCount}} 已收藏餐廳</h5>
      <div class="card-body d-flex flex-wrap">
        {{#each favoritedRestaurants}}
        <a href="/restaurants/{{this.id}}">
          <div class="m-1" style="width: 100px;height:100px"><img src="{{this.image}}" alt=""
              style="max-height:100%;max-width:100%;display:block;width:auto;height:auto;">
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>

</div>